<?xml version="1.0" encoding="utf-8"?><!-- 绘制图形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:visible="true">

    <!-- 设置线 -->
    <stroke
        android:width="@dimen/x1"
        android:color="@color/gray_font" />
    <!-- 设置角度 -->
    <corners android:radius="@dimen/x50" />
    <!-- 填充色 -->
    <gradient
        android:angle="0"
        android:centerColor="@color/gray_font"
        android:endColor="@color/gray_font"
        android:startColor="@color/gray_font" />

</shape>