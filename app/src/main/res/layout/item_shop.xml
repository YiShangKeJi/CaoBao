<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/goods_shopname"
        style="@style/text_ty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x90"
        android:gravity="center_vertical"
        android:text="天猫旗舰店" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginLeft="@dimen/x20"
            android:checked="false"
            style="@style/check" />

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="@dimen/y220"
            android:layout_height="@dimen/y220"
            android:layout_marginLeft="@dimen/x30"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_nav_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goods_introduce"
                style="@style/text_ty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/y60"
                android:paddingLeft="@dimen/x20"
                android:text="天猫旗舰店第一批系列产品，天猫旗舰店第一..." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goods_weight"
                    style="@style/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x20"
                    android:text="重量：5.1g" />

                <TextView
                    android:id="@+id/goods_colour"
                    style="@style/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x30"
                    android:text="颜色：黑色" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y60">

                <TextView
                    android:id="@+id/price"
                    style="@style/text_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x20"
                    android:text="234元"
                    android:textColor="@color/red" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/y2"
                    android:background="@drawable/shap"
                    >

                    <TextView
                        android:id="@+id/remove"
                        style="@style/text_ty"
                        android:layout_width="@dimen/x60"
                        android:layout_height="match_parent"
                        android:text="—" />

                    <View style="@style/view_line_height"></View>

                    <TextView
                        android:id="@+id/num"
                        style="@style/text_ty"
                        android:layout_width="@dimen/x60"
                        android:layout_height="match_parent"
                        android:text="1" />

                    <View style="@style/view_line_height"></View>

                    <TextView
                        android:id="@+id/add"
                        style="@style/text_8"
                        android:layout_width="@dimen/x60"
                        android:layout_height="match_parent"
                        android:text="+" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
