<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_drawerlayout"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTheme"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <TextView
                style="@style/text_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y100"
                android:text="凡卡其" />

            <com.ys.caobao.view.AppViewPager
                android:id="@+id/vp_main"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y120"
                android:layout_alignParentBottom="true"
                android:background="@color/colorTheme"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/x10">

                    <ImageView
                        android:id="@+id/iv_one"
                        android:layout_width="@dimen/x45"
                        android:layout_height="0px"
                        android:layout_weight="3"
                        android:src="@drawable/home_page_off" />

                    <TextView
                        android:id="@+id/tv_one"
                        style="@style/text_3"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="2"
                        android:text="首页" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_two"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/x10">

                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="@dimen/x45"
                        android:layout_height="0px"
                        android:layout_weight="3"
                        android:src="@drawable/home_page_off" />

                    <TextView
                        android:id="@+id/tv_two"
                        style="@style/text_3"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="2"
                        android:text="通讯" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_three"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/x10">

                    <ImageView
                        android:id="@+id/iv_three"
                        android:layout_width="@dimen/x45"
                        android:layout_height="0px"
                        android:layout_weight="3"
                        android:src="@drawable/home_page_off" />

                    <TextView
                        android:id="@+id/tv_three"
                        style="@style/text_3"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="2"
                        android:text="动态" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_four"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/x10">

                    <ImageView
                        android:id="@+id/iv_four"
                        android:layout_width="@dimen/x45"
                        android:layout_height="0px"
                        android:layout_weight="3"
                        android:src="@drawable/home_page_off" />

                    <TextView
                        android:id="@+id/tv_four"
                        style="@style/text_3"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="2"
                        android:text="我的" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_side_slip"
            android:layout_width="@dimen/x550"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:clickable="true"
            android:fitsSystemWindows="true"
            android:background="@color/button_yellow"
            android:orientation="vertical">

            <TextView
                style="@style/text_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y100"
                android:text="凡卡其" />

            <TextView
                style="@style/text_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="凡卡其" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>