<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- 自定义 -->
    <style name="text_1">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p20</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_2">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p22</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_3">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p24</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_4">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p26</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_5">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p28</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_ty">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p30</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_6">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p32</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_7">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p34</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_8">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p36</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_9">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p38</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_10">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p40</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="text_title">
        <item name="android:textColor">@color/colorTheme</item>
        <item name="android:textSize">@dimen/p34</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="text_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/p32</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/select_button</item>
    </style>

    <style name="text_area">
        <item name="android:textColor">@color/gray_black</item>
        <item name="android:textSize">@dimen/p26</item>
        <item name="android:padding">@dimen/x30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:lineSpacingExtra">@dimen/x5</item>
    </style>

    <style name="fit_windows">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/colorTheme</item>
    </style>

    <style name="view_line_height">
        <item name="android:layout_width">@dimen/x1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="view_line_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!--tabLayout 样式-->
    <style name="customTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorTheme</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/colorTheme</item>
        <item name="tabBackground">@color/gray</item>
        <item name="tabIndicatorHeight">@dimen/y8</item>
    </style>

    <!--dialog全屏-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/ban_e_transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Dialog进入及退出动画 -->
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--底部弹出动画-->
    <style name="anim_bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
    </style>
</resources>
